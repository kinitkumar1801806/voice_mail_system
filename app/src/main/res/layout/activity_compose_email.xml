<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:scrollbars="vertical"
    tools:context=".ComposeEmail">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_marginTop="60dp"
        android:id="@+id/subject"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_marginRight="60dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Subject"
        android:inputType="textMultiLine"
        />

    <ImageView
        android:layout_marginBottom="5dp"
        android:id="@+id/sub_mic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_green"
        android:layout_alignBottom="@+id/subject"
        android:src="@drawable/ic_baseline_mic_24"/>
    <TextView
        android:id="@+id/body_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/subject"
        android:layout_marginTop="80dp"
        android:text="Compose"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        />
       <EditText
           android:layout_marginTop="40dp"
           android:id="@+id/body"
           android:layout_marginLeft="10dp"
           android:layout_width="match_parent"
           android:layout_marginRight="60dp"
           android:layout_height="wrap_content"
           android:ems="10"
           android:hint="Body"
           android:layout_alignTop="@id/body_head"
           android:inputType="textMultiLine"
           />

       <ImageView
           android:layout_marginBottom="5dp"
           android:id="@+id/body_mic"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="10dp"
           android:background="@drawable/bg_green"
           android:layout_alignBottom="@+id/body"
           android:src="@drawable/ic_baseline_mic_24"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="attach"
        android:src="@drawable/ic_baseline_attach_file_24"
        android:backgroundTint="@color/green"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="100dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/docs"
        android:onClick="add_docs"
        android:src="@drawable/ic_baseline_insert_drive_file_24"
        android:backgroundTint="@color/green"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="80dp"
        android:visibility="gone"
        android:layout_marginBottom="130dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/images"
        android:onClick="add_images"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_image_24"
        android:backgroundTint="@color/green"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="70dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="send_email"
        android:src="@drawable/ic_baseline_send_24"
        android:backgroundTint="@color/green"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        />
</RelativeLayout>